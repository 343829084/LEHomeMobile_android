<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ssiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.home.lehome.activity.PhotoViewerActivity"
    android:background="#c8000000">

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        ssiv:tileBackgroundColor="#000000"
        android:id="@+id/scale_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="10dp"
        android:id="@+id/dialog_image_progressBar"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/chat_progressbar"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_centerInParent="true" />

</RelativeLayout>
