<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.home.lehome.fragment.FindMyTagFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/distance_textview"
            android:layout_gravity="center"
            android:textSize="150dp"
            android:text="0.0"
            android:textColor="#ff252525"
            android:textIsSelectable="true"
            android:focusable="false"
            android:editable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/bdname_textview"
            android:layout_gravity="center"
            android:textSize="24dp"
            android:textColor="#ff494949"
            android:focusable="false"
            android:editable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/power_textview"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textColor="#ff666668"
            android:focusable="false"
            android:editable="false" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/uidd_textview"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#ffa3a3a6"
        android:layout_margin="4dp"
        android:focusable="false"
        android:editable="false" />

</FrameLayout>
