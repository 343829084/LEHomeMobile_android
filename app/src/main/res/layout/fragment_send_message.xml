<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.home.lehome.fragment.MessageFragment">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<my.home.lehome.view.WaveformView-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="150dp"-->
        <!--android:id="@+id/message_voice_vitrualizer"-->
        <!--android:layout_alignParentLeft="false"-->
        <!--android:layout_alignParentTop="false"-->
        <!--android:divider="@null"-->
        <!--android:dividerHeight="0dp"-->
        <!--android:layout_centerInParent="true"/>-->

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message_state_progressBar"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentLeft="false"
            android:id="@+id/send_message_control_layout"
            android:layout_alignParentBottom="true"
            android:background="@drawable/top_shadow">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/send_message_btn"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:textSize="@dimen/abc_text_size_large_material"
                android:background="@drawable/msg_btn_bg"
                android:text="@string/message_press_to_speak"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
